<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/dialog_input">

    <Button
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/close"
        android:layout_alignParentRight="true"
        android:id="@+id/close_review"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="Send your review of the game Shark Pool"
        android:textSize="20sp"
        android:id="@+id/reviewTv"
        android:textColor="#FFFFFF"
        android:textStyle="bold" 
        android:gravity="center"/>
    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="250dp"
        android:layout_below="@+id/reviewTv"
        android:layout_marginTop="30dp"
        android:id="@+id/rel"
        android:layout_centerHorizontal="true"
        android:background="@drawable/review_input">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/reviewEt"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:inputType="textMultiLine"
            android:textSize="15sp"/>
    </RelativeLayout>
    <Button
        android:layout_width="60dp"
        android:id="@+id/send"
        android:layout_height="60dp"
        android:background="@drawable/send_disable"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/rel" />


</RelativeLayout>